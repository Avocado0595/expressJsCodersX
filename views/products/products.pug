extends ../layouts/layout.pug

block content

    .container
        .row.mt-4
            each item in products
                .col-md-6.col-lg-3
                    .card
                        img.card-img-top(src= item.image alt='Card image cap' width='180' height='286')
                        .card-body
                            h5.card-title #{item.id}. #{item.name}
                            p.card-text
                                | #{item.detail}
                            a.btn.btn-primary(href='#') Add to cart

        ul.pagination.mt-2
            
            li.page-item
                a.page-link(href='#') Previous
            li.page-item
                a.page-link(href='/products?page=1') 1
            li.page-item
                a.page-link(href='/products?page=2') 2
            li.page-item
                a.page-link(href='/products?page=3') 3
            li.page-item
                a.page-link(href='#') Next